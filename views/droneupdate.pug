extends layout

block content
    h1= title
    if (toShow == null)
        h2 No instance to update 
    else
        - let droneid = toShow._id
        - let type = toShow.type
        - let cost = toShow.cost
        - let use = toShow.use
        div.row(class='mb-2')
            div.mr-1 ID is
            div #{droneid}
            - let actionid = "/resource/drone/" + droneid
        form(id='droneForm', action= actionid, method="PUT")
            div.form-group
                label.droneAttr(for='type') drone type
                input#type(type='text', name='type')
            div.form-group
                label.droneAttr(for='cost') drone cost
                input#cost(type='number', name='cost')
            div.form-group
                label.droneAttr(for='use') drone use
                input#use(type='text', name='use')
            input(type="submit")
        script.
            document.forms['droneForm'].addEventListener('submit', (event) => {
                event.preventDefault();
                // TODO do something here to show user that form is being submitted
                fetch(event.target.action, {
                    method: 'PUT',
                    body: new URLSearchParams(new FormData(event.target)) // event.target is the form
                }).then((resp) => {
                    return resp.json(); // or resp.text() or whatever the server sends
                }).then((body) => {
                    alert("Update succeded")
                    // TODO handle body
                }).catch((error) => {
                    // TODO handle error
                    alert("Update failed " + error )
                });
            });